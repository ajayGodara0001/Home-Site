<% if(success && success.length ){ %>
    <div class=" alert alert-success col-4 alert-dismissible fade show offset-4" role="alert">
        <p><%= success %></p>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>

<% if(error && error.length ){ %>
    <div class=" alert alert-danger col-4 alert-dismissible fade show offset-4" role="alert">
        <p><%= error %></p>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>